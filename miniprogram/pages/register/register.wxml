<!--pages/register/register.wxml-->
<form bindsubmit='formSubmit'>
	<view class="cu-form-group">
		<view class="title" style="width:150rpx">姓名</view>
		<input placeholder="请输入您的真实姓名" name="name"></input>
	</view>
	<view class="cu-form-group">
		<view class="title" style="width:150rpx">手机号码</view>
		<input placeholder="请输入您的手机号码" type="number" name="phone"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-green">
				+86
			</view>
			<view class="cu-tag line-green">
				中国大陆
			</view>
		</view>
	</view>
	<button class='bg-green button-submit' form-type='submit' style="margin-top:100rpx">注册</button>
</form>